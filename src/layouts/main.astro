---
import BaseHead from '~/components/base-head.astro';
import MonitoringScript from '~/components/monitoring-script.astro';
import ThemeScript from '~/components/theme-script.astro';
import { getLangFromUrl } from '~/i18n/utils';
import type { SEOProps } from '~/types';

type Props = {
  seo?: SEOProps;
  class?: string;
};

const { seo, ...props } = Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<html {lang}>
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-HHP4YBX2PQ"></script>
    <BaseHead {...seo} />
    <ThemeScript />
    <MonitoringScript />
  </head>
  <body>
    <div class="blur-layer" aria-hidden="true"></div>
    <div class="container">
      <main {...props} class={Astro.props.class}>
        <slot />
      </main>
    </div>
  </body>
</html>
